@model MyShop.ViewModels.ItemUpdateViewModel

<h2>Update Listing</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ItemId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rooms"></label>
        <input asp-for="Rooms" class="form-control" />
        <span asp-validation-for="Rooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Beds"></label>
        <input asp-for="Beds" class="form-control" />
        <span asp-validation-for="Beds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Guests"></label>
        <input asp-for="Guests" class="form-control" />
        <span asp-validation-for="Guests" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Baths"></label>
        <input asp-for="Baths" class="form-control" />
        <span asp-validation-for="Baths" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageUpload">Image 1</label>
        <input type="hidden" asp-for="ImageUrl" />
        <input type="file" id="ImageUpload" name="ImageUpload" class="form-control" accept="image/*" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageUpload2">Image 2</label>
        <input type="hidden" asp-for="ImageUrl2" />
        <input type="file" id="ImageUpload2" name="ImageUpload2" class="form-control" accept="image/*" />
        <span asp-validation-for="ImageUrl2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageUpload3">Image 3</label>
        <input type="hidden" asp-for="ImageUrl3" />
        <input type="file" id="ImageUpload3" name="ImageUpload3" class="form-control" accept="image/*" />
        <span asp-validation-for="ImageUrl3" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary mt-3">Cancel</a>
</form>
