@model IEnumerable<Item>

<div class="container">
    <table class='table table-striped table-text'>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price per night</th>
            @*<th>Description</th>*@
            <th>Address</th>
            <th>Phone number</th>
            <th>Rooms</th>
            <th>Beds</th>
            @*<th>Image</th>*@
            <th>CustomerUser</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>
                    <a asp-controller="Item"
                       asp-action="Details"
                       asp-route-id="@item.ItemId">@item.Name</a>
                </td>
                <td>@item.Price.ToString("0 NOK")</td>
                @*<td>@item.Description</td>*@
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Rooms</td>
                <td>@item.Beds</td>
                @*<td>
                    <img src="@item.ImageUrl" alt="Item Image" style="max-width: 250px; height: auto;" />
                </td>*@
                <td>@(item.CustomerUser?.Email)</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.ItemId">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
                </td>
            </tr>
        }
    </table>
    <p>
        <a class="btn btn-primary text-light"
           asp-controller="Item"
           asp-action="Create">Create New Item</a>
    </p>
</div>